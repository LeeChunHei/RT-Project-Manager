{
	"name": "rt-project-manager",
	"displayName": "RT Project Manager",
	"description": "Extension that manages projects used in NXP i.MX RT series chip",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:rt-project-manager.create_project",
		"onCommand:rt-project-manager.init_workspace",
		"onCommand:rt-project-manager.properties"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rt-project-manager.init_workspace",
				"title": "Init RT Workspace"
			},
			{
				"command": "rt-project-manager.create_project",
				"title": "Create RT Project"
			},
			{
				"command": "rt-project-manager.properties",
				"title": "Properties"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "rt-project-manager.create_project",
					"group": "navigation",
					"when": "!explorerResourceIsFolder"
				},
				{
					"command": "rt-project-manager.properties",
					"when": "explorerResourceIsFolder",
					"group": "7_modification"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
